<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edx.marco.time2learn" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Topic"
            android:label="@string/title_activity_topic" >
        </activity>
        <activity
            android:name=".Time"
            android:label="@string/title_activity_time" >
        </activity>
        <activity
            android:name=".Selection"
            android:label="@string/title_activity_selection" >
        </activity>
        <activity
            android:name=".SubTopic"
            android:label="@string/title_activity_sub_topic" >
        </activity>
        <activity
            android:name=".Player"
            android:label="@string/title_activity_player" >
        </activity>
    </application>

</manifest>
